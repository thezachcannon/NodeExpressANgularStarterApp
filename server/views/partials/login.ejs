<body>
    <div class="col-md-6 col-md-offset-3">
    <h2 class="headerTitle">Admin Login</h2>
    <form name="form" ng-submit="login()" role="form">
        <div class="form-group">
            <label class="headerTitle" for="username">Username</label>
            <input type="text" name="username" id="username" class="form-control" ng-model="username" required />
        </div>
        <div class="form-group">
            <label class="headerTitle" for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" ng-model="password" required />
        </div>
        <div style="text-align: center" class="headerTitle">{{error.message}}</span>
        <div class="form-actions">
            <button type="submit" ng-disabled="form.$invalid" class="btn btn-primary pull-right">Login</button>
        </div>
    </form>
</div>
</body>